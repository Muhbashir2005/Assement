            if (a1 < b1)
            {
                if (a1 < c1)
                {
                    a1 = a1 + c1;
                    c1 = a1 - c1;
                    a1 = a1 - c1;

                    if (b1 > c1)
                    {                        
                        a1 = a1 + b1;
                        b1 = a1 - b1;
                        a1 = a1 - b1;
                    }
                }
