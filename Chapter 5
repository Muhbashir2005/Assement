               { Console.WriteLine($"{st1}+ {th4} = 0");}
            if (st1 + th5 == 0)
                {Console.WriteLine($"{st1}+ {th5} = 0");}
            if (nd2 + rd3 == 0)
               { Console.WriteLine($"{nd2}+ {rd3} = 0");}
